{
  "name": "task-management-api",
  "version": "1.0.0",
  "description": "Task management API with TypeScript, Express, and PostgreSQL",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
